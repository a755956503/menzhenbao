<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.itcast.menzhen.hospital.Hospital" table="t_hospital">
		<!-- 配置唯一标识 -->
		<id name="h_id" column="h_id">
			<generator class="native"/>
		</id>
		<!-- 配置普通属性 -->
		<property name="h_name" column="h_name"/>
		<property name="h_address" column="h_address"/>
		<property name="username" column="name"/>
	</class>
</hibernate-mapping>
